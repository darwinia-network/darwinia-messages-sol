{
  "name": "@darwinia/contracts-bridge",
  "version": "1.0.0",
  "description": "Darwinia bridge core contract",
  "main": "",
  "scripts": {
    "build": "npx hardhat compile",
    "test": "npx hardhat test",
    "test:e2e": "npx hardhat test --no-compile e2e/*.js",
    "ci": "CI=true npx hardhat test && yarn mv-reporter",
    "mv-reporter": "mv gasReporterOutput.json ../../gasReporterOutput-bridge.json",
    "docs": "solidity-docgen --solc-module solc-0.8 -t docs/templates && doctoc ./docs/ --maxlevel 3",
    "clean": "shx rm -rf cache artifacts abi",
    "lint": "yarn solhint",
    "lint:check": "yarn solhint:check",
    "solhint": "yarn solhint:check --fix",
    "solhint:check": "solhint --config ./.solhint.json \"src/**/*.sol\""
  },
  "author": "Darwinia dev",
  "license": "MIT",
  "devDependencies": {
    "@nomiclabs/hardhat-ethers": "^2.0.2",
    "@nomiclabs/hardhat-etherscan": "^2.1.2",
    "@nomiclabs/hardhat-waffle": "^2.0.1",
    "@polkadot/api": "^7.4.1",
    "chai": "^4.3.4",
    "chai-as-promised": "^7.1.1",
    "doctoc": "^2.0.1",
    "dotenv": "^10.0.0",
    "ethereum-waffle": "^3.0.0",
    "ethereumjs-util": "^7.0.10",
    "ethers": "^5.0.0",
    "hardhat": "^2.3.0",
    "hardhat-abi-exporter": "^2.2.1",
    "hardhat-gas-reporter": "^1.0.6",
    "merkle-patricia-tree": "3.0.0",
    "merkletreejs": "^0.2.18",
    "shx": "^0.3.3",
    "solc-0.8": "npm:solc@^0.8.11",
    "solhint": "^3.3.6",
    "solidity-docgen": "^0.5.13"
  }
}
